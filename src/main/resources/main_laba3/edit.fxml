<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="main_laba3.Controllers.EditController"
            prefWidth="450" prefHeight="350">

    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Редактирование заказа" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox alignment="CENTER" spacing="20">
            <ImageView fx:id="productImage" fitWidth="150" fitHeight="150"
                       style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-background-color: #f9f9f9;"/>
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Название товара:"/>
                <TextField fx:id="productNameField" promptText="Введите название"/>
                <TextField fx:id="productPhotoField" promptText="Введите название файла"/>
                <Button text="Выбрать изображение" onAction="#chooseImage"/>
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="20">
            <Button text="Сохранить" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                    onAction="#saveChanges"/>
            <Button text="Отмена" style="-fx-background-color: #f44336; -fx-text-fill: white;"
                    onAction="#closeWindow"/>
        </HBox>
    </VBox>
</AnchorPane>
