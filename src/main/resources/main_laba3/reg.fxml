<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main_laba3.Controllers.RegController">
   <children>
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="600.0">
         <children>
            <Label text="ФИО:" />
            <TextField fx:id="idFio" promptText="Введите ФИО">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="84.0" prefWidth="600.0">
         <children>
            <Label text="Логин:" />
            <TextField fx:id="idLogin" promptText="Введите логин">
               <HBox.margin>
                  <Insets left="14.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="81.0" prefWidth="600.0">
         <children>
            <Label text="Пароль:" />
            <TextField fx:id="idPassword" promptText="Введите пароль">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
       <VBox alignment="CENTER" spacing="10">
      <Button fx:id="idBtn3" mnemonicParsing="false" onAction="#onRegistrButtonClick" text="Зарегистироваться" />

       <Button fx:id="backToLogin" onAction="#openLogin" text="Вернуться"/>

       <Label fx:id="message" style=" -fx-text-fill: red"/>
       </VBox>
   </children>
</VBox>
