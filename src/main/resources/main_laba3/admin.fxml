<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="450.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main_laba3.Controllers.AdminController">

    <HBox alignment="CENTER" spacing="20">
        <VBox spacing="10">
            <Label text="Покупатель:" />
            <TextField fx:id="newBuyers" promptText="Новый пользователь" />
        </VBox>

        <VBox spacing="10">
            <Label text="Товар:" />
            <TextField fx:id="newProduct" promptText="Новый товар" />
        </VBox>
    </HBox>

    <VBox alignment="CENTER" spacing="10" style="-fx-border-color: lightgray; -fx-border-radius: 10; -fx-padding: 10;">
        <Label text="Изображение товара:" />
        <ImageView fx:id="productPreview" fitWidth="120" fitHeight="120" preserveRatio="true" />
        <Button fx:id="chooseImageButton" text="Выбрать изображение" onAction="#onChooseImage" />
        <Label fx:id="selectedImageName" textFill="gray" />
    </VBox>

    <Label fx:id="message">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
        </VBox.margin>
    </Label>

    <VBox spacing="10">
        <HBox alignment="CENTER">
            <Button fx:id="newValue" onAction="#addNewValue" text="Добавить" />
        </HBox>

        <HBox alignment="CENTER">
            <Button fx:id="backToOrder" onAction="#onBackToOrder" text="Вернуться обратно" />
        </HBox>
    </VBox>
</VBox>
