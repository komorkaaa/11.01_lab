<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" prefHeight="296.0" prefWidth="272.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main_laba3.Controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Логин:" />
   <TextField fx:id="idLogin" promptText="Ввведите логин:" />
   <Label text="Пароль:" />
   <PasswordField fx:id="idPassword" promptText="Введите пароль:" />

    <Label fx:id="welcomeText" />
   <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
      <children>
          <VBox alignment="CENTER" spacing="10" >
             <Button fx:id="idButtonLogin" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Вход">
                <HBox.margin>
                   <Insets left="20.0" />
                </HBox.margin>
             </Button>
             <Button fx:id="idButtonRegistr" mnemonicParsing="false" onAction="#onRegistrButtonClick" text="Регистрация">
                <HBox.margin>
                   <Insets left="20.0" />
                </HBox.margin>
             </Button>
          </VBox>
      </children>
   </HBox>
</VBox>
